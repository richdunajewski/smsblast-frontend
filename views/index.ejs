<!DOCTYPE html>
<html>
    <head>
        <title>smsblast</title>

        <link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="bower_components/font-awesome/css/font-awesome.min.css">
    </head>
    <body>
        <div class="container">
            <h1 class="page-header">Send SMS</h1>

            <div class="row">
                <div class="hidden-xs col-sm-3"></div>
                <div class="col-xs-12 col-sm-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">Compose</h3>
                        </div>
                        <div class="panel-body">
                            <div class="col-xs-12">

                                <form action="/send/sms" method="post" class="form-horizontal">
                                    <div class="form-group">
                                        <label for="input-to">To</label>
                                        <input type="phone" class="form-control" name="to" id="input-to">
                                    </div>
                                    <div class="form-group">
                                        <label for="input-message">Message</label>
                                        <textarea class="form-control" name="message" id="input-message" rows="4"></textarea>
                                    </div>

                                    <div class="text-right">
                                        <span class="chars-remaining">0 / 160</span>
                                        <button type="submit" class="btn btn-success">Send <i class="fa fa-send"></i></button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="hidden-xs col-sm-3"></div>
            </div>
        </div>

        <script src="bower_components/jquery/dist/jquery.min.js"></script>
        <script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    </body>
</html>